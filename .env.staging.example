# Aura Flow Staging 环境变量配置
# 复制此文件为 .env.staging 并填入实际值

# 环境配置
NODE_ENV=staging
PORT=3002

# 数据库配置 (Staging)
STAGING_POSTGRES_DB=aura_flow_staging
STAGING_POSTGRES_USER=aura_flow_staging_user
STAGING_POSTGRES_PASSWORD=__GENERATE_STRONG_PASSWORD__
STAGING_DATABASE_URL=postgresql://aura_flow_staging_user:password@localhost:5433/aura_flow_staging

# JWT 配置 (Staging)
STAGING_JWT_SECRET=__GENERATE_STRONG_STAGING_SECRET_32_CHARS__
STAGING_JWT_EXPIRES_IN=15m
STAGING_REFRESH_TOKEN_SECRET=__GENERATE_STRONG_STAGING_REFRESH_SECRET_32_CHARS__
STAGING_REFRESH_TOKEN_EXPIRES_IN=7d

# CORS 配置 (Staging)
STAGING_CORS_ORIGIN=https://staging.yourdomain.com

# 监控配置 (Staging)
STAGING_SENTRY_DSN=
STAGING_LOG_LEVEL=debug

# AI 提供商配置 (Staging)
STAGING_AI_PROVIDER=mock
STAGING_OPENAI_API_KEY=sk-__YOUR_STAGING_OPENAI_API_KEY__
STAGING_OPENAI_BASE_URL=https://api.openai.com/v1

# 速率限制配置 (Staging - 更宽松)
STAGING_RATE_LIMIT_WINDOW_MS=60000
STAGING_RATE_LIMIT_MAX=200
STAGING_RATE_LIMIT_LOGIN_MAX=10
STAGING_RATE_LIMIT_LOGIN_WINDOW_MS=900000

# 安全配置 (Staging)
STAGING_BCRYPT_ROUNDS=12
STAGING_SESSION_SECRET=__GENERATE_STRONG_STAGING_SESSION_SECRET__

# 文件上传配置 (Staging)
STAGING_MAX_FILE_SIZE=10485760
STAGING_UPLOAD_DIR=./uploads

# 监控配置 (Staging)
STAGING_ENABLE_METRICS=true
STAGING_HEALTH_CHECK_INTERVAL=30000

# 备份配置 (Staging)
STAGING_BACKUP_RETENTION_DAYS=7
STAGING_BACKUP_SCHEDULE=0 2 * * *

# 生产环境安全配置 (Staging)
STAGING_TRUST_PROXY=true
STAGING_SECURE_COOKIES=true
STAGING_SAME_SITE_COOKIES=strict

# Redis 配置 (Staging)
STAGING_REDIS_PASSWORD=__GENERATE_STRONG_REDIS_PASSWORD__

# 域名配置
DOMAIN=yourdomain.com
STAGING_DOMAIN=staging.yourdomain.com

# 通知配置
NOTIFICATION_EMAIL=admin@yourdomain.com
